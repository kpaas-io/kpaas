                },
                "point": {
                    "description": "Check point",
                    "type": "string"
                },
                "result": {
                    "description": "Checking Result",
                    "type": "string",
                    "enum": [
                        "notRunning",
                        "checking",
                        "passed",
                        "failed"
                    ]
                }
            }
        },
        "api.CheckingResultResponseData": {
            "type": "object",
            "properties": {
                "items": {
